<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <bean class="com.allen.config.utils.SpringContextHolder" lazy-init="false" />

    <context:annotation-config/>

    <context:component-scan base-package="com.allen.config"/>

    <bean class="com.allen.config.ConfigSourcePropertyPlaceholderConfigurer">
        <property name="configSources">
            <list>
                <bean class="com.allen.config.source.BootFileConfigSourcePropertySource" />
                <bean class="com.allen.config.source.ApolloConfigSourcePropertySource" />
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true" />
    </bean>

</beans>

